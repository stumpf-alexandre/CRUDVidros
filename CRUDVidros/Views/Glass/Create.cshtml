@model CRUD.Models.Glass
<div class="form-horizontal">
    <form action="Create" method="POST">
        <div class="form-group">
            <label></label>
            <input class="form-control"
                    type="hidden" 
                    name="id"/>
        </div>
        <div class="form-group">
            <label>Composição</label>
            <input class="form-control"
                    type="text"
                    name="composition"/>
        </div>
        <div class="form-group">
            <label>Milimetros</label>
            <input class="form-control"
                    type="text" 
                    name="millim"/>
        </div>
        <div class="form-group">
            <label>Quantidade</label>
            <input class="form-control"
                    type="text" 
                    name="amount"/>
        </div>
        <div class="form-group">
            <label>Altura</label>
            <input class="form-control"
                    type="text" 
                    name="height"/>
        </div>
        <div class="form-group">
            <label>Largura</label>
            <input class="form-control"
                    type="text" 
                    name="width"/>
        </div>
        <div class="form-group">
            <label>Fornecedor</label>
            <input class="form-control"
                    type="text" 
                    name="provider"/>
        </div>
        <div class="form-group">
            <label>Nº Nota Fiscal</label>
            <input class="form-control"
                    type="text" 
                    name="invoice"/>
        </div>
        <input class="btn btn-primary"
                type="submit" value="Salvar"/>
    </form>
</div>