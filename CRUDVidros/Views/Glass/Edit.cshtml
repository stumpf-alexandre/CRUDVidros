@model CRUD.Models.Glass
<div class="form-horizontal">
    <form action="Edit" method="POST">
        <div class="form-group">
            <label></label>
            <input class="form-control"
                    type="hidden"
                    name="id"
                    value="@Model.id"/>
        </div>
        <div class="form-group">
            <label>Composição</label>
            <input class="form-control"
                    type="text"
                    name="composition"
                    value="@Model.composition"/>
        </div>
        <div class="form-group">
            <label>Milimetros</label>
            <input class="form-control"
                    type="text" 
                    name="millim"
                    value="@Model.millim"/>
        </div>
        <div class="form-group">
            <label>Quantidade</label>
            <input class="form-control"
                    type="text" 
                    name="amount"
                    value="@Model.amount"/>
        </div>
        <div class="form-group">
            <label>Altura</label>
            <input class="form-control"
                    type="text" 
                    name="height"
                    value="@Model.height"/>
        </div>
        <div class="form-group">
            <label>Largura</label>
            <input class="form-control"
                    type="text" 
                    name="width"
                    value="@Model.width"/>
        </div>
        <div class="form-group">
            <label>Fornecedor</label>
            <input class="form-control"
                    type="text" 
                    name="provider"
                    value="@Model.provider"/>
        </div>
        <div class="form-group">
            <label>Nº Nota Fiscal</label>
            <input class="form-control"
                    type="text" 
                    name="invoice"
                    value="@Model.invoice"/>
        </div>
        <input class="btn btn-primary"
                type="submit" value="Salvar"/>
    </form>
</div>